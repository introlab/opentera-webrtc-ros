<launch>
    <!-- Arguments Demo-->
    <arg name="signaling_server_hostname" default="localhost"/>
    <arg name="signaling_server_port" default="8080"/>
    <arg name="signaling_server_password" default="abc"/>
    <arg name="model" default="waffle" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="centered_robot" default="true"/>
    <arg name="robot_vertical_offset" default="180"/>
    <arg name="rviz" default="false"/>
    <arg name="is_stand_alone" default="true"/>

    <arg name="output" value="screen"/>

    <!-- Demo -->
    <include file="$(find opentera_webrtc_demos)/launch/demo.launch">
        <arg name="signaling_server_hostname" value="$(arg signaling_server_hostname)"/>
        <arg name="signaling_server_port" value="$(arg signaling_server_port)"/>
        <arg name="signaling_server_password" value="$(arg signaling_server_password)"/>
        <arg name="model" value="$(arg model)"/>
        <arg name="centered_robot" value="$(arg centered_robot)"/>
        <arg name="robot_vertical_offset" value="$(arg robot_vertical_offset)"/>
        <arg name="rviz" value="$(arg rviz)"/>
        <arg name="is_stand_alone" value="$(arg is_stand_alone)"/>
        <arg name="output" value="$(arg output)"/>
    </include>

    <!-- Rosbridge -->
    <include file="$(find opentera_webrtc_rosbridge_server)/launch/rosbridge_webrtc.launch">
        <arg name="data_in_topic" value="rosbridge_webrtc_data_incoming"/>
        <arg name="data_out_topic" default="rosbridge_webrtc_data_outgoing"/>
    </include>
    <node name="rosapi" pkg="rosapi" type="rosapi_node">
        <param name="topics_glob" value="[*]" />
        <param name="services_glob" value="[*]" />
        <param name="params_glob" value="[*]" />
    </node>

    <!-- Data channel for Rosbrisge -->
    <include file="$(find opentera_webrtc_ros)/launch/ros_data_channel_client.launch">
        <arg name="name" value="data_streamer_rosbridge"/>
        <arg name="output" value="$(arg output)"/>
        <arg name="is_stand_alone" value="$(arg is_stand_alone)"/>

        <arg name="server_url" value="http://$(arg signaling_server_hostname):$(arg signaling_server_port)"/>
        <arg name="client_name" value="Robot Rosbridge Data Channel"/>
        <arg name="room_name" value="rosbridge"/>
        <arg name="room_password" value="$(arg signaling_server_password)"/>
    </include>

</launch>
