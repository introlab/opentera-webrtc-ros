<?xml version='1.0'?>
<launch>
    <!-- Loading arguments -->
    <arg name="simulation"          default="false"/>
    <arg name="camera_name"         default="realsense"/>
    <arg name="robot_name"          default="beam"/>
    <arg name="rviz"                default="true"/>
    <arg name="rviz_config_file"    default="rviz_cfg.rviz"/>
    <arg name="rviz_cfg"            default="-d $(find-pkg-share beam_control)/config/$(var rviz_config_file)"/>
    <arg name="rtabmap_viz"         default="false"/>
    <arg name="localization"        default="false"/>
    <arg name="database_path"       default="~/.ros/rtabmap.db"/>
    <arg name="joystick_port"       default="js0"/>
    <arg name="run_local"           default="true"/>

    <node if="$(var rviz)" name="rviz" pkg="rviz" exec="rviz" args="$(var rviz_cfg)"/>

    <!-- Teleop mode --><!--
    <group><include file="$(find-pkg-share control)/launch/teleop_joystick.launch.xml">
        <arg name="robot_name"      value="$(var robot_name)" />
        <arg name="joystick_port"   value="$(var joystick_port)"/>
    </include></group> -->

    <group if="$(var simulation)">

         <!-- Initiate an empty world in Gazebo -->
         <group><include file="$(find-pkg-share gazebo_ros)/launch/empty_world.launch.xml">
            <arg name="world_name"          value="$(find-pkg-share sim_gazebo)/worlds/MTLhouse.world"/>
            <arg name="debug"               value="false"/>
            <arg name="gui"                 value="true"/>
            <arg name="paused"              value="false"/>
            <arg name="use_sim_time"        value="true"/>
            <arg name="headless"            value="false"/>
        </include></group>

        <!-- Spawn the beam into Gazebo -->
        <node name="$(var robot_name)_spawn" pkg="gazebo_ros" exec="spawn_entity.py"
            args="
                -x 1.0
                -y 0.0
                -z 0.2
                -urdf
                -param robot_description
                -model $(var robot_name) ">
        </node>

    </group>

    <!-- Launches the group into the beam -->
    <!-- <group unless="$(var run_local)">
        <group unless="$(var simulation)">
            <machine name="beam" address="192.168.1.169" user="introlab" password="introlab" env-loader="/home/introlab/agewell_ws/src/agewell-smart-beam/ros_env.sh" default="true"/>
        </group>
    </group> -->

    <group unless="$(var simulation)">

        <group><include file="$(find-pkg-share odometry)/launch/odometry.launch.xml">
            <arg name="output_odom"         value="/odom"/>
        </include></group>

        <group><include file="$(find-pkg-share realsense2_camera)/launch/rs_camera.launch.xml">
            <arg name="align_depth"         value="true"/>
            <arg name="unite_imu_method"    value="copy"/>
            <arg name="enable_gyro"         value="true"/>
            <arg name="enable_accel"        value="true"/>
            <arg name="camera"              value="realsense"/>
            <arg name="enable_pointcloud"   value="true"/>
        </include></group>

        <group><include file="$(find-pkg-share camera)/launch/camera.launch.xml">
            <arg name="hasConfig"           value="true"/>
            <arg name="config"              value="USB500W05G.yaml"/>
            <arg name="frame_id"            value="camera_link"/>
            <arg name="id"                  value="3"/>
            <arg name="name"                value="front_camera"/>
            <arg name="rate"                value="30"/>
        </include></group>

        <!--<node name="image_proc" pkg="image_proc" exec="image_proc" ns="front_camera"/>-->

        <group><include file="$(find-pkg-share odas_ros)/launch/odas.launch.xml">
            <arg name="configuration_path"  value="/home/introlab/agewell_ws/src/agewell-smart-beam/ros_pkgs/Framework/inputs/odas_ros/config/configuration_beam.cfg "/>
            <arg name="frame_id"            value="odas_link"/>
        </include></group>

    </group>

    <!-- Rtabmap Launcher-->
    <group><include file="$(find-pkg-share beam_slam)/launch/rtab_map_slam.launch.xml">
        <arg name="camera_name"             value="$(var camera_name)"/>
        <arg name="rtabmap_viz"             value="$(var rtabmap_viz)"/>
        <arg name="localization"            value="$(var localization)"/>
        <arg name="database_path"           value="$(var database_path)"/>
        <arg name="camera_depth_topic"      value="aligned_depth_to_color"/>
    </include></group>

    <!-- Launching move_base to move robot around -->
    <group><include file="$(find-pkg-share sim_gazebo)/launch/move_base.launch.xml"/></group>

    <!-- <param name="robot_description" command="xacro '$(find-pkg-share beam_description)/urdf/beam.xacro'"/> -->
    <let name="robot_description_command" value="$(exec-in-pkg xacro xacro) '$(find-pkg-share turtlebot3_beam_description)/urdf/turtlebot3_$(var model).urdf.xacro'" />
    <let name="robot_description" value="$(command '$(var robot_description_command)')" />

    <node name="joint_state_publisher" pkg="joint_state_publisher" exec="joint_state_publisher">
        <param name="robot_description" value="$(var robot_description)"/>
    </node>
    <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(var robot_description)"/>
    </node>

    <!-- Launching streaming client -->
    <group><<include file="$(find-pkg-share opentera_webrtc_ros)/launch/beam.launch.xml"/></group>

</launch>
